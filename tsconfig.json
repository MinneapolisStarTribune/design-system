{
  "compilerOptions": {
    // Build output
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,

    // Module system
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // Strictness
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Paths
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".storybook"]
}
